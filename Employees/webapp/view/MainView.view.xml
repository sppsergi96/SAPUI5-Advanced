<mvc:View 
    controllerName="logaligroup.Employees.controller.MainView" 
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true" 
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <HBox>
                            <Label id="labelEmployee" labelFor="inputEmployee" text="{i18n>employee}" class="sapUiSmallMargin"/>
                            <Input id="inputEmployee" maxLength="10" width="200px" class="sapUiSmallMarginEnd" liveChange="onValidate"/>
                            <Label id="labelCountry" labelFor="inputCountry" text="{i18n>country}" class="sapUiSmallMargin" visible="false"/>
                            <Select id="inputCountry" forceSelection="true" visible="false">
                                <core:Item key="US" text="{i18n>countryUS}"/>
                                <core:Item key="UK" text="{i18n>countryUK}"/>
                                <core:Item key="ES" text="{i18n>countryES}"/>
                            </Select>
                        </HBox>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
